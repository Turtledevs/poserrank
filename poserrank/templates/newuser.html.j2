{% extends "layout.html.j2" %}
{% block page %}New user{% endblock %}
{% block head %}
    {{ super() }}
    <script type="text/javascript" src="../static/javascript/newuser.js"></script>
{% endblock %}
{% block content %}

<div class="container">
	<section class="hero">
		<div class="container has-text-centered">
			<h1 class="title">New user</h1>
		</div>
	</section>

	<section class="section">
		<div class="columns">
			<div class="column is-one-third is-offset-one-third">
				<div class="box">
					<form action="{{ url_for('new_user') }}" method="POST">
						<div class="field">
							<label class="label">Username</label>
                            <label id="usernameError" style="color:red;"></label>
							<div class="control">
								<input class="input" onfocusout="checkUsername()" type="text" name="username" placeholder="Text input">
							</div>
						</div>
						<div class="field">
							<label class="label">Full name</label>
                            <label id="fullnameError" style="color:red;"></label>
							<div class="control">
								<input class="input" onfocusout="checkFullname()" type="text" name="full_name" placeholder="Text input">
							</div>
						</div>
						<div class="field">
							<label class="label">Email</label>
                            <label id="emailError" style="color:red;"></label>
							<div class="control">
								<input class="input" onfocusout="checkEmail()" type="text" name="email" placeholder="Text input">
							</div>
						</div>
						<div class="field">
							<label class="label">Password</label>
                            <label id="passwordError" style="color:red;"></label>
							<div class="control">
								<input class="input" onfocusout="checkPassword()" type="password" name="password" placeholder="Text input">
							</div>
						</div>
						<input id="submit" type="submit" value="Create" disabled>
					</form>
				</div>
			</div>
		</div>
	</section>
</div>

{% endblock %}
